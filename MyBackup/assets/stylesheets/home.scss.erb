div.container p,
div.container h1 {
  margin-bottom: 30px;
}

div.container .background h1 {
  margin: 20px 0 0 0;
  color: white;
}

div.container .background h2 {
  color: white;
  font-size: 20px;
  margin: 20px 0 0 0;
}

div.container .background {
  width: 100%;
  height: fit-content;
  text-align: center;
}

img {
  width: 49%;
}

div.background-filler {
  background-color: rgb(0, 0, 0);
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -100;
}
