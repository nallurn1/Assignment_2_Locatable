<p id="notice"><%= notice %></p>

<h1>User Locations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>User id: REMOVE</th>
      <th>Current IP address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_locations.each do |user_location| %>
      <tr>
        <td><%= user_location.user_location_street %></td>
        <td><%= user_location.user_location_city %></td>
        <td><%= user_location.user_location_state %></td>
        <td><%= user_location.user_location_country %></td>
        <td><%= user_location.user_id %></td>
        <td><%= user_location.user_ip %></td>
        <td><%= link_to 'Show', user_location %></td>
        <td><%= link_to 'Edit', edit_user_location_path(user_location) %></td>
        <td><%= link_to 'Delete', user_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

